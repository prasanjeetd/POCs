@{
    ViewBag.Title = "PrdouctKendo";
}

@Styles.Render("http://cdn.kendostatic.com/2014.3.1119/styles/kendo.common.min.css")
@Scripts.Render("http://cdn.kendostatic.com/2014.3.1119/js/kendo.all.min.js")
@Scripts.Render("http://cdn.kendostatic.com/2014.3.1119/js/jquery.min.js")



<h2>Product</h2>

<div id="example">
    <div class="demo-section k-header">
        <div class="box-col">
            <h4>Add or update a record</h4>
            <div data-role="grid"
                date-scrollable="true"
                data-editable="true"
                data-toolbar="['create', 'save']"
                data-columns="[
                                 { 'field': 'ProductName', 'width': 270 },
                                 { 'field': 'UnitPrice' },
                              ]"
                data-bind="source: products, visible: isVisible,
    events: {
        save: onSave
    }"
                style="width: 480px; height: 200px">
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/Kendo/ProductVM.js")

<script type="text/javascript">
    $(document).ready(function () {

        kendo.bind($("#example"), viewModel);
    });

</script>
